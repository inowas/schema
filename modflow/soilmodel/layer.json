{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9_\\-]{1,255}$",
          "maxLength": 255
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        "description": {
          "type": "string"
        },
        "number": {
          "type": "integer"
        },
        "layavg": {
          "type": "number"
        },
        "laytyp": {
          "type": "number"
        },
        "laywet": {
          "type": "number"
        },
        "parameters": {
          "type": "array",
          "items": {
            "$ref": "./layerParameter.json"
          }
        },
        "relations": {
          "type": "array",
          "items": {
            "$ref": "./layerRelation.json"
          }
        }
      },
      "required": [
        "id",
        "name",
        "description",
        "number",
        "layavg",
        "laytyp",
        "laywet",
        "parameters"
      ]
    },
    {
      "$ref": "./layerLegacy.json"
    }
  ]
}
