{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "https://schema.inowas.com/",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[a-z0-9_\\-]{1,255}$",
            "maxLength": 255
        },
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
        },
        "description": {
            "type": "string"
        },
        "number": {
            "type": "integer"
        },
        "top": {
            "$ref": "/modflow/soilmodel/layerValue"
        },
        "botm": {
            "$ref": "/modflow/soilmodel/layerValue"
        },
        "hk": {
            "$ref": "/modflow/soilmodel/layerValue"
        },
        "hani": {
            "$ref": "/modflow/soilmodel/layerValue"
        },
        "vka": {
            "$ref": "/modflow/soilmodel/layerValue"
        },
        "layavg": {
            "type": "number"
        },
        "laytyp": {
            "type": "number"
        },
        "laywet": {
            "type": "number"
        },
        "ss": {
            "$ref": "/modflow/soilmodel/layerValue"
        },
        "sy": {
            "$ref": "/modflow/soilmodel/layerValue"
        }
    },
    "required": [
        "id",
        "name",
        "description",
        "number",
        "top",
        "botm",
        "hk",
        "hani",
        "vka",
        "layavg",
        "laytyp",
        "laywet",
        "ss",
        "sy"
    ]
}
