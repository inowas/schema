{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "uuid": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
    },
    "message_name": {
      "type": "string",
      "pattern": "^changeUserProfile$"
    },
    "metadata": {
      "type": "object"
    },
    "payload": {
      "type": "object",
      "properties": {
        "user_id": {
          "type": "string",
          "pattern": "^[0-9a-f]{8}-[-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        },
        "profile": {
          "type": "object"
        }
      },
      "additionalProperties": false,
      "required": [
        "user_id",
        "profile"
      ]
    }
  },
  "required": [
    "uuid",
    "message_name",
    "metadata",
    "payload"
  ]
}
