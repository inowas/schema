{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "https://schema.inowas.com/",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        },
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "public": {
            "type": "boolean"
        }
    },
    "required": [
        "id",
        "name",
        "public"
    ]
}
