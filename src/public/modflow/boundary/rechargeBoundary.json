{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "pattern": "^Feature$"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_\\-]{3,255}$"
    },
    "geometry": {
      "$ref": "../../geojson/polygon.json"
    },
    "properties": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        "type": {
          "type": "string",
          "pattern": "^rch$"
        },
        "layers": {
          "$ref": "../layers.json"
        },
        "cells": {
          "$ref": "../cells.json"
        },
        "sp_values": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "description": "0: recharge rate value or 2D raster array",
              "oneOf": [
                {
                  "type": "number",
                  "minimum": 0,
                  "minItems": 1,
                  "maxItems": 1
                },
                {
                  "type": "array",
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "number",
                      "minimum": 0
                    }
                  }
                }
              ]
            }
          }
        },
        "isExcludedFromCalculation": {
          "type": "boolean"
        }
      },
      "required": [
        "name",
        "type",
        "cells",
        "layers",
        "sp_values"
      ]
    }
  },
  "required": [
    "type",
    "id",
    "geometry",
    "properties"
  ]
}
