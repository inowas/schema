{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "https://schema.inowas.com/",
  "type": "object",
  "properties": {
    "uuid": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
    },
    "message_name": {
      "type": "string",
      "pattern": "^updateLayer$"
    },
    "metadata": {
      "type": "object"
    },
    "payload": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        },
        "layer_id": {
          "type": "string",
          "pattern": "^[a-z0-9_\\-]{1,255}$",
          "maxLength": 255
        },
        "layer": {
          "$ref": "/modflow/soilmodel/layer"
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "layer_id",
        "layer"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "uuid",
    "message_name",
    "metadata",
    "payload"
  ]
}