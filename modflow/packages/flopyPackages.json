{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "This object represents all properties for calculation of modflow models",
  "type": "object",
  "required": [
    "version",
    "author",
    "project",
    "model_id",
    "mf",
    "mt",
    "swt"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "project": {
      "type": "string"
    },
    "model_id": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
    },
    "mf": {
      "$ref": "./mfPackages.json"
    },
    "mt": {
      "$ref": "./mtPackages.json"
    },
    "swt": {
      "$ref": "./swtPackages.json"
    }
  }
}
