{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ModflowModel",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        },
        "name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 255
        },
        "description": {
            "type": "string"
        },
        "geometry": {
            "$ref": "../geojson/polygon.json"
        },
        "bounding_box": {
            "$ref": "./boundingBox.json"
        },
        "grid_size": {
            "$ref": "./gridSize.json"
        },
        "length_unit": {
            "$ref": "./lengthUnit.json"
        },
        "time_unit": {
            "$ref": "./timeUnit.json"
        },
        "public": {
            "type": "boolean"
        },
        "permissions": {
            "type": "string",
            "minLength": 3,
            "maxLength": 3
        },
        "cells": {
            "$ref": "./cells.json"
        },
        "stressperiods": {
            "$ref": "./stressperiods.json"
        }
    },
    "additionalProperties": true,
    "required": [
        "id",
        "name",
        "description",
        "geometry",
        "bounding_box",
        "grid_size",
        "length_unit",
        "time_unit",
        "public"
    ]
}
