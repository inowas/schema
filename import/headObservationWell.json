{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "pattern": "^hob$"
    },
    "name": {
      "type": "string"
    },
    "geometry": {
      "$ref": "../geojson/point.json"
    },
    "layers": {
      "$ref": "../modflow/layers.json"
    },
    "sp_values": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "description": "0: observed head",
          "type": "number",
          "minItems": 1,
          "maxItems": 1
        }
      }
    }
  },
  "required": [
    "type",
    "name",
    "geometry",
    "layers",
    "sp_values"
  ]
}
