{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "https://schema.inowas.com/",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "pattern": "^Feature$"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_\\-]{3,255}$"
    },
    "geometry": {
      "$ref": "/geojson/linestring"
    },
    "properties": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        "type": {
          "type": "string",
          "pattern": "^riv$"
        },
        "layers": {
          "$ref": "/modflow/affectedLayers"
        },
        "cells": {
          "$ref": "/modflow/activeCells"
        }
      },
      "required": [
        "name",
        "type",
        "cells",
        "layers"
      ]
    }
  },
  "required": [
    "type",
    "id",
    "geometry",
    "properties"
  ]
}
