{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "https://schema.inowas.com/",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "pattern": "^Feature$"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_\\-]{3,255}$"
    },
    "geometry": {
      "$ref": "/geojson/point"
    },
    "properties": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        "type": {
          "type": "string",
          "pattern": "^hob$"
        },
        "layers": {
          "$ref": "/modflow/layers"
        },
        "cells": {
          "$ref": "/modflow/cells"
        },
        "sp_values": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "description": "Groundwater head",
              "type": "number",
              "minItems": 1,
              "maxItems": 1
            }
          }
        }
      },
      "required": [
        "name",
        "type",
        "cells",
        "layers",
        "sp_values"
      ]
    }
  },
  "required": [
    "type",
    "id",
    "geometry",
    "properties"
  ]
}
