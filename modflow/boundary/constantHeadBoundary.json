{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "https://schema.inowas.com/",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "pattern": "^FeatureCollection$"
    },
    "features": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "$ref": "/modflow/boundary/constantHeadFeature"
          },
          {
            "$ref": "/modflow/boundary/constantHeadObservationPointFeature"
          }
        ]
      }
    }
  },
  "required": [
    "type",
    "features"
  ]
}