{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "https://schema.inowas.com/",
    "type": "object",
    "properties": {
        "uuid": {
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        },
        "message_name": {
            "type": "string",
            "pattern": "^updateModflowModel$"
        },
        "metadata": {
            "type": "object"
        },
        "payload": {
            "$ref": "/modflow/modflowModel"
        }
    },
    "additionalProperties": false,
    "required": [
        "uuid",
        "message_name",
        "metadata",
        "payload"
    ]
}
