{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "https://schema.inowas.com/",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[a-z0-9_\\-]{3,255}$"
        },
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
        },
        "geometry": {
            "$ref": "/geojson/point"
        },
        "date_time_values": {
            "$ref": "/modflow/boundary/riverDateTimeValues"
        }
    },
    "required": [
        "id",
        "name",
        "geometry",
        "date_time_values"
    ]
}
