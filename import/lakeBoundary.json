{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "pattern": "^lak$"
    },
    "name": {
      "type": "string"
    },
    "geometry": {
      "$ref": "../geojson/polygon.json"
    },
    "layers": {
      "$ref": "../modflow/layers.json"
    },
    "sp_values": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "description": "0: precipitation, 1: evapotranspiration, 2: runoff, 3: water removal, 4: minimum stage, 5: maximum stage",
          "type": "number",
          "minItems": 4,
          "maxItems": 6
        }
      }
    }
  },
  "required": [
    "type",
    "name",
    "geometry",
    "layers",
    "sp_values"
  ]
}
